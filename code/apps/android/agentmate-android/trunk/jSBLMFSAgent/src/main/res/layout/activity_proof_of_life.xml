<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/offwhite"
    android:orientation="vertical" >

    <include
        android:id="@+id/container_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/header_layout" />

    <include
        android:id="@+id/container_heading"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/heading_layout" />

    <TextView
        android:id="@+id/msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:shadowColor="@color/white"
        android:textColor="@color/text_grey"
        android:textSize="18sp"
        android:textStyle="normal" />

        <CheckBox
            android:id="@+id/checkAcknowledged"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/textViewMarginSmall"
            android:text="I acknowledge."
            android:textColor="@android:color/black"
            android:textSize="@dimen/textViewTextSizeMedium" />

    <Button
        android:id="@+id/btnNext"
        android:layout_width="220dp"
        android:layout_height="48dp"
        android:layout_below="@id/layoutInputs"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_next_selector"
        android:text="@string/next"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="normal" />

</LinearLayout>