<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dark_img_slide_bg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/jslogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/mainIconHeaderWidth"
        android:src="@drawable/icon_walkthrough_wallet" />

    <TextView
        android:id="@+id/heading1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/jslogo"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/layoutMarginXXLarge"
        android:text="Open a JS Wallet instantly"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/heading2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/heading1"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/textViewMarginXXXLarge"
        android:layout_marginRight="@dimen/textViewMarginXXXLarge"
        android:layout_marginTop="@dimen/layoutMarginXXLarge"
        android:text="@string/js_heading"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:textColor="@color/white"
        android:textSize="@dimen/textViewMarginLarge" />

</RelativeLayout>