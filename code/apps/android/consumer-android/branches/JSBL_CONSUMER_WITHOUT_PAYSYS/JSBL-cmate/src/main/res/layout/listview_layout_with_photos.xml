<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/listview_background_normal"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="left|center_vertical" >

        <TextView
            android:id="@+id/txtData"
            android:layout_width="@dimen/listItemTextWidth"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/textViewMarginNormal"
            android:gravity="left"
            android:text="Data"
            android:textColor="@color/skyBlue"
            android:textSize="@dimen/textViewTextSizeNormal" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="right|center_vertical" >

        <ImageView
            android:id="@+id/photo"
            android:layout_width="@dimen/left_little_margin_left"
            android:layout_height="@dimen/left_little_margin_left"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/textViewMarginSmall"
            android:paddingBottom="@dimen/textViewMarginNormal"
            android:paddingLeft="@dimen/textViewMarginNormal"
            android:paddingRight="@dimen/textViewMarginNormal"
            android:paddingTop="@dimen/textViewMarginNormal"
            android:scaleType="fitXY" />
    </LinearLayout>

</LinearLayout>