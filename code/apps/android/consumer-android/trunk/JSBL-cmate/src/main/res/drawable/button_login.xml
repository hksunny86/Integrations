<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/btn_login_pressed" />

            <corners android:radius="@dimen/cornerRadiusXSmall" />

            <padding android:bottom="@dimen/buttonPaddingNormal" android:left="@dimen/buttonPaddingSmall" android:right="@dimen/buttonPaddingSmall" android:top="@dimen/buttonPaddingNormal" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <solid android:color="@color/btn_login_pressed" />

            <corners android:radius="@dimen/cornerRadiusXSmall" />

            <padding android:bottom="@dimen/buttonPaddingNormal" android:left="@dimen/buttonPaddingSmall" android:right="@dimen/buttonPaddingSmall" android:top="@dimen/buttonPaddingNormal" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/btn_login_normal" />

            <corners android:radius="@dimen/cornerRadiusXSmall" />

            <padding android:bottom="@dimen/buttonPaddingNormal" android:left="@dimen/buttonPaddingSmall" android:right="@dimen/buttonPaddingSmall" android:top="@dimen/buttonPaddingNormal" />
        </shape>
    </item>

</selector>