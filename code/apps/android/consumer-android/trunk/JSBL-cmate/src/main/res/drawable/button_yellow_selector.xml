<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">

        <shape>
            <gradient android:angle="270" android:endColor="@color/hover_color" android:startColor="@color/hover_color" />

            <stroke android:width="1dp" android:color="@color/hover_color" />

            <corners android:radius="3dp" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape></item>

    <item android:state_focused="true">

        <shape>
            <gradient android:angle="270" android:endColor="@color/hover_color" android:startColor="@color/hover_color" />

            <stroke android:width="1dp" android:color="@color/hover_color" />

            <corners android:radius="3dp" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape></item>

    <item><shape>
        <gradient android:angle="270" android:startColor="@color/accent_color" android:endColor="@color/accent_color" />

            <stroke android:width="1dp" android:color="@color/accent_color" />

            <corners android:radius="5dp" />

        </shape></item>

</selector>