<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
<corners
    android:radius="5dp"/>
            <solid android:color="@color/light_grey" /> <!--background color of box-->
        </shape>
    </item>

    <item
        android:top="-4dp"
        android:right="-4dp"
        android:left="-4dp">
        <shape>

            <corners
                android:radius="5dp"/>
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="2dp"
                android:color="@color/golden" />
        </shape>
    </item>
</layer-list>