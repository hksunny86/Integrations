<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlMiniItem"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_margin="@dimen/layoutMarginNormal"
    android:background="@color/white"
    android:elevation="5dp"
    android:gravity="center"
    android:padding="@dimen/layoutMarginNormal">

    <LinearLayout
        android:id="@+id/llFirst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">


        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            app:srcCompat="@drawable/main_icon_transaction_plus" />

        <LinearLayout
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layoutMarginNormal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTransactionDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bill Payment"
                android:textColor="@color/black"


                android:textSize="@dimen/textViewTextSizeNormal" />

            <TextView
                android:id="@+id/tvTransactionDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/textViewMarginSmall"

                android:text="02/08/2017"
                android:textColor="@color/black"


                android:textSize="@dimen/textViewTextSizeSmall" />

        </LinearLayout>


    </LinearLayout>


    <RelativeLayout
        android:id="@+id/llSecond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_gravity="right"
        android:gravity="right"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTransactionDate1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tvTransactionDate"
            android:layout_toRightOf="@+id/tvTransactionDate"
            android:gravity="center_horizontal"
            android:text="99"
            android:textAlignment="center"
            android:textColor="@color/black"

            android:textSize="@dimen/textViewTextSizeXSmall" />

        <TextView
            android:id="@+id/tvTransactionDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="9dp"
            android:text="+ PKR 100,150"
            android:textColor="@color/black"
            android:textSize="@dimen/textViewTextSizeSmall" />

    </RelativeLayout>


    <TextView
        android:id="@+id/tvMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="More Transactions"
        android:textColor="@color/black"
        android:visibility="gone" />


</RelativeLayout>