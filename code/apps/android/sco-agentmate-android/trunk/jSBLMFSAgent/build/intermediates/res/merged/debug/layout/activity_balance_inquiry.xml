<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/offwhite"
    android:orientation="vertical" >

    <include
        android:id="@+id/container_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/header_layout" />

    <RelativeLayout
        android:id="@+id/data_layout"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:visibility="gone" >

        <TextView
            android:id="@+id/lblHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:shadowColor="@color/white"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="0"
            android:text=""
            android:textColor="@color/text_grey"
            android:textSize="22sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/lblSubHeading"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblHeading"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="6dp"
            android:gravity="center_horizontal"
            android:shadowColor="@color/white"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="0"
            android:text=""
            android:textColor="@color/text_grey"
            android:textSize="17sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/lblcurrentbalancetitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblSubHeading"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:shadowColor="@color/white"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="0"
            android:text="Current Account Balance"
            android:textColor="@color/text_grey"
            android:textSize="20sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/lblcurrentbalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblcurrentbalancetitle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:shadowColor="@color/white"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="0"
            android:text=""
            android:textColor="@color/orange"
            android:textSize="29sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/lbldate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblcurrentbalance"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:shadowColor="@color/white"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="0"
            android:text="10/10/2013"
            android:textColor="@color/text_grey"
            android:textSize="16sp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/btnok"
           android:layout_width="220dp"
                android:layout_height="48dp"
            android:layout_below="@id/lbldate"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:background="@drawable/button_next_selector"
            android:text="OK"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

</LinearLayout>