<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

        <include
            android:id="@+id/container_header"
            layout="@layout/header_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <include
            android:id="@+id/containing_header"
            layout="@layout/heading_layout"
            android:layout_below="@+id/container_header"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/containing_header"
        android:scrollbars="none">

    <RelativeLayout
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/select_finger"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/containing_header"
            android:layout_marginTop="@dimen/margin_XXlarge"
            android:layout_marginBottom="@dimen/layoutMarginXXLarge"
            android:gravity="center"
            android:text="@string/selectfinger"
            android:textColor="@color/black"
            android:textSize="@dimen/textViewTextSizeXLarge" />

        <RelativeLayout
            android:id="@+id/lefthand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/select_finger">

            <View
                android:id="@+id/view_6"
                android:layout_marginTop="@dimen/left_thumb_margin_top"
                android:layout_marginLeft="@dimen/left_thumb_margin_left"
                android:layout_width="@dimen/finger_hight_width_large"
                android:layout_height="@dimen/finger_hight_width_normal"
                android:visibility="visible"
                android:background="@android:color/white"/>

            <View
                android:id="@+id/view_7"
                android:layout_width="@dimen/finger_hight_width_large"
                android:layout_height="@dimen/finger_hight_width_normal"
                android:layout_marginTop="@dimen/left_index_margin_top"
                android:layout_marginLeft="@dimen/left_index_margin_left"
                android:visibility="visible"
                android:background="@android:color/white"/>

            <View
                android:id="@+id/view_8"
                android:layout_width="@dimen/finger_hight_width_large"
                android:layout_height="@dimen/finger_hight_width_normal"
                android:layout_marginTop="@dimen/left_middle_margin_top"
                android:layout_marginLeft="@dimen/left_middle_margin_left"
                android:visibility="visible"
                android:background="@android:color/white"/>
            <View
                android:id="@+id/view_9"
                android:layout_width="@dimen/finger_hight_width_large"
                android:layout_height="@dimen/finger_hight_width_normal"
                android:layout_marginTop="@dimen/left_ring_margin_top"
                android:layout_marginLeft="@dimen/left_ring_margin_left"
                android:visibility="visible"
                android:background="@android:color/white"/>
            <View
                android:id="@+id/view_10"
                android:layout_width="@dimen/finger_hight_width_large"
                android:layout_height="@dimen/finger_hight_width_normal"
                android:layout_marginTop="@dimen/left_little_margin_top"
                android:layout_marginLeft="@dimen/left_little_margin_left"
                android:visibility="visible"
                android:background="@android:color/white"/>

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/fingerprint_lft_icon_bg"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/ivfingersix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:srcCompat="@drawable/fingerprint_icon_six_pressed" />


            <android.support.v7.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ivfingerseven"
                android:visibility="gone"
                app:srcCompat="@drawable/fingerprint_icon_seven_pressed" />

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ivfingereight"
                android:visibility="gone"
                app:srcCompat="@drawable/fingerprint_icon_eight_pressed" />

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:id="@+id/ivfingernine"
                app:srcCompat="@drawable/fingerprint_icon_nine_pressed" />

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ivfingerten"
                android:visibility="gone"
                app:srcCompat="@drawable/fingerprint_icon_ten_pressed" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rightHand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/select_finger">

            <View
                android:id="@+id/view_1"
                android:layout_marginTop="@dimen/right_thumb_margin_top"
                android:layout_marginLeft="@dimen/right_thumb_margin_left"
                android:layout_width="@dimen/finger_hight_width_large"
                android:layout_height="@dimen/finger_hight_width_normal"
                android:visibility="visible"
                android:background="@android:color/white"/>

            <View
                android:id="@+id/view_2"
                android:layout_marginTop="@dimen/right_index_margin_top"
                android:layout_marginLeft="@dimen/right_index_margin_left"
                android:layout_width="@dimen/finger_hight_width_large"
                android:layout_height="@dimen/finger_hight_width_normal"
                android:visibility="visible"
                android:background="@android:color/white"/>

            <View
                android:id="@+id/view_3"
                android:layout_marginTop="@dimen/right_middle_margin_top"
                android:layout_marginLeft="@dimen/right_middle_margin_left"
                android:layout_width="@dimen/finger_hight_width_large"
                android:layout_height="@dimen/finger_hight_width_normal"
                android:visibility="visible"
                android:background="@android:color/white"/>

            <View
                android:id="@+id/view_4"
                android:layout_marginTop="@dimen/right_ring_margin_top"
                android:layout_marginLeft="@dimen/right_ring_margin_left"
                android:layout_width="@dimen/finger_hight_width_large"
                android:layout_height="@dimen/finger_hight_width_normal"
                android:visibility="visible"
                android:background="@android:color/white"/>

            <View
                android:id="@+id/view_5"
                android:layout_marginTop="@dimen/right_little_margin_top"
                android:layout_marginLeft="@dimen/right_little_margin_left"
                android:layout_width="@dimen/finger_hight_width_large"
                android:layout_height="@dimen/finger_hight_width_normal"
                android:visibility="visible"
                android:background="@android:color/white"/>


            <android.support.v7.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/fingerprint_rgt_icon_bg" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/ivfingerone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:srcCompat="@drawable/fingerprint_icon_one_pressed" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/ivfingertwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:srcCompat="@drawable/fingerprint_icon_two_pressed" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/ivfingerthree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:srcCompat="@drawable/fingerprint_icon_three_pressed" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/ivfingerfour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:srcCompat="@drawable/fingerprint_icon_four_pressed" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/ivfingerfive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:srcCompat="@drawable/fingerprint_icon_five_pressed" />

        </RelativeLayout>

            <RelativeLayout
                android:layout_below="@+id/rightHand"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <RelativeLayout
                    android:id="@+id/scViewInLayout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/scView"
                    android:layout_below="@+id/lefthand"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="@dimen/margin_standard">

                    <ImageView
                        android:id="@+id/imageViewFingerImpression"
                        android:src="@drawable/icon_finger_print_scan"
                        android:layout_width="@dimen/fingerPrint_image_width"
                        android:layout_height="@dimen/fingerPrint_image_height"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true" />

                    <TextView
                        android:id="@+id/lblMessage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imageViewFingerImpression"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:layout_marginLeft="@dimen/margin_normal"
                        android:layout_marginTop="@dimen/margin_standard"
                        android:shadowColor="@color/white"
                        android:textColor="@color/blue_bg"
                        android:textSize="@dimen/ts_normal"
                        android:textStyle="italic" />

                    <Button
                        android:id="@+id/btn_Scan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/lblMessage"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/margin_large"
                        android:layout_marginBottom="@dimen/margin_XXlarge"
                        android:background="@drawable/button_next_selector"
                        android:text="Scan"
                        android:textColor="@color/white"
                        android:textSize="@dimen/ts_heading_normal"
                        android:visibility="visible"/>

                    <LinearLayout
                        android:id="@+id/ll_scanDone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/lblMessage"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/margin_large"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        android:weightSum="2">

                        <Button
                            android:id="@+id/btn_reScan"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginLeft="@dimen/margin_standard"
                            android:layout_marginRight="@dimen/margin_small"
                            android:layout_marginBottom="@dimen/margin_XXlarge"
                            android:layout_weight="1"
                            android:background="@drawable/button_cancel_selector"
                            android:text="Re-scan"
                            android:textColor="@color/white"
                            android:textSize="@dimen/ts_heading_normal" />

                        <Button
                            android:id="@+id/btn_next"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginLeft="@dimen/margin_small"
                            android:layout_marginRight="@dimen/margin_standard"
                            android:layout_marginBottom="@dimen/margin_XXlarge"
                            android:layout_weight="1"
                            android:background="@drawable/button_next_selector"
                            android:text="Next"
                            android:textColor="@color/white"
                            android:textSize="@dimen/ts_heading_normal" />

                    </LinearLayout>

                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>