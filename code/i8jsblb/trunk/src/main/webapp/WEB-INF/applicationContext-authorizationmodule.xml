<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
           http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.0.xsd
           http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.0.xsd">



	<!--DAO-->
	<bean id="ActionAuthorizationModelDAO"
		class="com.inov8.microbank.server.dao.portal.authorizationmodule.hibernate.ActionAuthorizationModelHibernateDAO">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>
	<bean id="ActionAuthorizationHistoryModelDAO"
		class="com.inov8.microbank.server.dao.portal.authorizationmodule.hibernate.ActionAuthorizationHistoryModelHibernateDAO">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>
	<bean id="actionAuthPictureModelDAO"
		class="com.inov8.microbank.server.dao.portal.authorizationmodule.hibernate.ActionAuthPictureModelHibernateDAO">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>
	
	
	<!-- Service -->
	<bean id="ActionAuthorizationManager" parent="baseTransactionProxy">
		<property name="target">
			<bean class="com.inov8.microbank.server.service.portal.authorizationmodule.ActionAuthorizationManagerImpl">
				<property name="actionAuthorizationModelDAO">
					<ref local="ActionAuthorizationModelDAO" />	
				</property>
				<property name="actionAuthPictureModelDAO">
					<ref local="actionAuthPictureModelDAO" />	
				</property>
				<property name="actionAuthorizationHistoryManager">
					<ref local="actionAuthorizationHistoryManager" />	
				</property>
				<property name="usecaseFacade" ref="usecaseFacade" />
				<property name="jmsProducer" ref="jmsProducer"/>
				<property name="actionLogManager" ref="actionLogManager"/>
				<property name="ibftSwitchController" ref="iBFTSwitchController" />
				<property name="transactionReversalManager" ref="transactionReversalFacade" />
			</bean>
		</property>
	</bean>
	<bean id="actionAuthorizationHistoryManager" parent="baseTransactionProxy">
		<property name="target">
			<bean class="com.inov8.microbank.server.service.portal.authorizationmodule.ActionAuthorizationHistoryManagerImpl">
				<property name="actionAuthorizationHistoryModelDAO">
					<ref local="ActionAuthorizationHistoryModelDAO" />	
				</property>
			</bean>
		</property>
	</bean>

	
	<!-- Facade -->
	<bean id="actionAuthorizationFacade"
		class=" com.inov8.microbank.server.facade.portal.authorizationmodule.ActionAuthorizationFacadeImpl">
		<property name="frameworkExceptionTranslator">
			<ref bean="frameworkExceptionTranslator" />
		</property>
		<property name="actionAuthorizationManager">
			<ref local="ActionAuthorizationManager" />
		</property>
		
	</bean>
		
	<!-- Advice -->
	<bean id="actionAuthorizationAdvice" class="com.inov8.microbank.server.service.portal.authorizationmodule.ActionAuthorizationAdvice">
		<property name="actionAuthorizationManager">
			<ref local="ActionAuthorizationManager" />
		</property>	
	</bean>
	
</beans>
