<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
           http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.0.xsd
           http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.0.xsd">

    <!-- DAO -->
    <bean id="demographicsDAO" class="com.inov8.microbank.demographics.dao.hibernate.DemographicsHibernateDAO">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>

    <!-- Service -->
    <bean id="demographicsManager" parent="baseTransactionProxy">
        <property name="target">
            <bean class="com.inov8.microbank.demographics.service.DemographicsManagerImpl">
                <property name="demographicsDAO" ref="demographicsDAO"/>
            </bean>
        </property>
    </bean>


</beans>
