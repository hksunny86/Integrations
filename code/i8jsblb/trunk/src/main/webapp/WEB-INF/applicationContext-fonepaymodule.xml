<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:tx="http://www.springframework.org/schema/tx"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
           http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.0.xsd
           http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.0.xsd">

	<bean id="fonePayManager" parent="baseTransactionProxy">
		<property name="target">
			<bean class="com.inov8.microbank.fonepay.service.FonePayManagerImpl" autowire="byName">
				<property name="bbAccountsViewDao" ref="bBAccountsViewDao"/>
				<property name="appUserHibernateDAO" ref="appUserDAO"/>
				<property name="verisysDataHibernateDAO" ref="verisysDataDAO"/>
				<property name="olaCustomerAccountTypeDao" ref = "olaCustomerAccountTypeDao"/>
				<property name="esbAdapter" ref="esbAdapter" />
				<property name="genericDAO">
					<ref bean="genericDAOV2"/>
				</property>
				<property name="transactionReversalManager">
					<ref bean="transactionReversalManager"/>
				</property>
				<property name="coreAdviceQueingPreProcessor">
					<ref bean="coreAdviceQueingPreProcessor"/>
				</property>
				<property name="clsDebitCreditManager" ref = "clsDebitCreditManager"/>
				<property name="clsDebitCreditDAO" ref = "clsDebitCreditDAO"/>
			</bean>
		</property>
	</bean>

	<bean id="fonePayFacade" class="com.inov8.microbank.fonepay.facade.FonePayFacadeImpl">
		<property name="fonePayManager" ref="fonePayManager"/>
		<property name="frameworkExceptionTranslator" ref="frameworkExceptionTranslator"/>
		<property name="creditAccountQueingPreProcessor" ref="creditAccountQueingPreProcessor"/>
		<!-- <property name="fonePayLogDAO" ref="fonePayLogDAO"/> -->
	</bean>

		<bean id="fonePayLogDAO" class="com.inov8.microbank.fonepay.dao.hibernate.FonePayLogHibernateDAO">
		<property name="sessionFactory" ref="sessionFactory"/>
			<property name="dataSource" ref="dataSource" />
	</bean>
	<bean id="virtualCardHibernateDAO" class="com.inov8.microbank.fonepay.dao.hibernate.VirtualCardHibernateDAO">
		<property name="sessionFactory" ref="sessionFactory"/>
		<property name="dataSource" ref="dataSource" />
	</bean>
	<bean id="virtualCardViewHibernateDAO" class="com.inov8.microbank.fonepay.dao.hibernate.VirtualCardViewHibernateDAO">
		<property name="sessionFactory" ref="sessionFactory"/>
	</bean>
	
	<bean id="pinRetryDAO" class="com.inov8.microbank.fonepay.dao.hibernate.PinRetryHibernateDAO">
		<property name="sessionFactory" ref="sessionFactory"/>
	</bean>
	<bean id="fonePayTransactionDetailViewDAO" class="com.inov8.microbank.fonepay.dao.hibernate.FonePayTransactionDetailViewHibernateDAO">
		<property name="sessionFactory" ref="sessionFactory"/>
	</bean>
	




</beans>