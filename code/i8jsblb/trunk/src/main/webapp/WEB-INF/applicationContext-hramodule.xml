<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- DAO -->
    <bean id="payMtncRequestDAO" class="com.inov8.microbank.hra.paymtnc.dao.hibernate.PayMtncRequestHibernateDAO">
        <property name="sessionFactory" ref="sessionFactory" />
    </bean>

    <bean id="remitanceInfoDAO" class="com.inov8.microbank.hra.airtimetopup.dao.hibernate.RemitanceInfoHibernateDAO">
        <property name="sessionFactory" ref="sessionFactory" />
    </bean>

    <bean id="conversionRateDAO" class="com.inov8.microbank.hra.airtimetopup.dao.hibernate.ConversionRateHibernateDAO">
        <property name="sessionFactory" ref="sessionFactory" />
        <property name="dataSource" ref="dataSource"/>
    </bean>
    <bean id="rateTypeDAO" class="com.inov8.microbank.hra.airtimetopup.dao.hibernate.RateTypeHibernateDAO">
        <property name="sessionFactory" ref="sessionFactory" />
    </bean>
    <bean id="airTimeTopViewDAO" class="com.inov8.microbank.hra.airtimetopup.dao.hibernate.AirTimeTopViewHibernateDAO">
        <property name="sessionFactory" ref="sessionFactory" />
    </bean>

    <!-- MANAGER -->

    <bean id="hraManager" parent="baseTransactionProxy">
        <property name="target">
            <bean class="com.inov8.microbank.hra.service.HRAManagerImpl">
                <property name="payMtncRequestDAO" ref="payMtncRequestDAO" />
                <property name="conversionRateDAO" ref="conversionRateDAO" />
                <property name="remitanceInfoDAO" ref="remitanceInfoDAO" />
            </bean>
        </property>
    </bean>

</beans>