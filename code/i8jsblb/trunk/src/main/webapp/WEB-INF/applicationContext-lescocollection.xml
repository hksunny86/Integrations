<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	     xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	     xmlns:tx="http://www.springframework.org/schema/tx"
	     xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
           http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.0.xsd
           http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.0.xsd">


	<bean id="lescoCollectionDAO" class="com.inov8.microbank.server.dao.lescomodule.hibernate.LescoCollectionHibernateDAO">
    	<property name="sessionFactory" ref="sessionFactory"/>
	</bean>                

	<bean id="lescoLogDAO" class="com.inov8.microbank.server.dao.lescomodule.hibernate.LescoLogHibernateDAO">
    	<property name="sessionFactory" ref="sessionFactory"/>
	</bean>                

	<bean id="lescoCollectionManager" parent="baseTransactionProxy">
		<property name="target">
			<bean class="com.inov8.microbank.server.service.lescomodule.LescoCollectionManagerImpl">
				<property name="lescoCollectionDAO">
					<ref local="lescoCollectionDAO"/>
				</property>
				<property name="lescoLogDAO">
					<ref local="lescoLogDAO"/>
				</property>
				<property name="genericDao">
					<ref bean="genericHibernateDAO"/>
				</property>
			</bean>
		</property>	
	</bean>

	<bean id="lescoFacade" class="com.inov8.microbank.server.facade.LescoCollectionFacadeImpl">
   		<property name="frameworkExceptionTranslator">
    		<ref bean="frameworkExceptionTranslator"/>
	    </property>
    	<property name="lescoCollectionManager">
      		<ref local="lescoCollectionManager"/>
    	</property>
	</bean>


	<bean id="lescoCollectionReportScheduler" class="org.springframework.scheduling.quartz.JobDetailBean">
		<property name="jobClass" value="com.inov8.microbank.webapp.scheduler.LescoCollectionReportScheduler"/>
		<property name="jobDataAsMap">
			<map>
				<entry key="lescoCollectionManager">
					<ref local="lescoCollectionManager"/>
				</entry>
			</map>
		</property>
	</bean>
	
	<bean id="cronTrigger" class="org.springframework.scheduling.quartz.CronTriggerBean">
		<property name="jobDetail" ref="lescoCollectionReportScheduler" />
		<!-- run every morning at 4 AM -->
		<property name="cronExpression" value="0 0 4 * * ?" />
	</bean>
	
	<bean class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
		<property name="triggers">
			<list>
				<ref bean="cronTrigger" />
			</list>
		</property>
	</bean>

           
 </beans>
