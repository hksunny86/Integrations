<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="verisysDataManager" parent="baseTransactionProxy">
        <property name="target">
            <bean class="com.inov8.microbank.nadraVerisys.service.VerisysDataManagerImpl">
                <property name="verisysDataDAO" ref="verisysDataDAO"/>
                <property name="virtualCardHibernateDAO" ref="virtualCardHibernateDAO"/>
            </bean>
        </property>
    </bean>
    <bean id="verisysDataDAO" class="com.inov8.microbank.nadraVerisys.dao.hibernate.VerisysDataHibernateDAO">
        <property name="sessionFactory" ref="sessionFactory"/>
        <property name="dataSource" ref="dataSource"/>
    </bean>


</beans>