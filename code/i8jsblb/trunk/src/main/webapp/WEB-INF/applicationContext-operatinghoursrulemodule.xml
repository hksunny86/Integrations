<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
           http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.0.xsd
           http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.0.xsd">



	<!--DAO-->
	<bean id="operatingHoursRuleModelDAO"
		class="com.inov8.microbank.server.dao.operatinghoursmodule.hibernate.OperatingHoursRuleModelHibernateDAO">
		<property name="sessionFactory" ref="sessionFactory" />
		<property name="dataSource" ref="dataSource" />

	</bean>

	<!-- Service -->
	<bean id="OperatingHoursRuleManager" parent="baseTransactionProxy">
		<property name="target">
			<bean
				class="com.inov8.microbank.server.service.portal.operatinghoursmodule.OperatingHoursRuleManagerImpl">
				<property name="operatingHoursRuleModelDAO">
					<ref local="operatingHoursRuleModelDAO" />
				</property>
				<property name="actionLogManager">
					<ref bean="actionLogManager" />
				</property>
				<property name="productManager" ref="productFacade" />
			</bean>
		</property>
	</bean>

	
	<!-- Facade -->
	<bean id="operatingHoursRuleFacade"
		class="com.inov8.microbank.server.facade.portal.operatinghoursmodule.OperatingHoursRuleFacadeImpl">
		<property name="frameworkExceptionTranslator">
			<ref bean="frameworkExceptionTranslator" />
		</property>
		<property name="OperatingHoursRuleManager">
			<ref local="OperatingHoursRuleManager" />
		</property>
	</bean>
	<!-- Action -->
	
</beans>

