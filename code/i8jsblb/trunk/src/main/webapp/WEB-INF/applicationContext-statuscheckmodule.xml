<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	     xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	     xmlns:tx="http://www.springframework.org/schema/tx"
	     xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
           http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.0.xsd
           http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.0.xsd">


	<!-- Definition of Service -->
	<bean id="statusCheckManager" parent="baseTransactionProxy">
		<property name="target">
			<bean class="com.inov8.microbank.server.service.statuscheckmodule.StatusCheckManagerImpl">
				<property name="integrationModuleManager">
					<ref bean="integrationModuleManager"/>
				</property>
			    <property name="creditAccountQueueSender" ref="creditAccountQueueSender"/>
			    <property name="mailEngine" ref="mailEngine"/>
		  		<property name="mailMessage" ref="mailMessage"/>
			</bean>
		</property>
	</bean>

	<bean id="statusCheckFacade" class="com.inov8.microbank.server.facade.StatusCheckFacadeImpl">
		<property name="frameworkExceptionTranslator">
			<ref bean="frameworkExceptionTranslator"/>
		</property>
		<property name="statusCheckManager">
			<ref local="statusCheckManager"/>
		</property>
	</bean>
</beans>
