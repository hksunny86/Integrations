<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	     xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	     xmlns:tx="http://www.springframework.org/schema/tx"
	     xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
           http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.0.xsd
           http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.0.xsd">

<bean id="tickerListViewDAO" class="com.inov8.microbank.server.dao.tickermodule.hibernate.TickerListViewHibernateDAO">
    <property name="sessionFactory" ref="sessionFactory"/>
  </bean>


 <bean id="tickerManager" parent="baseTransactionProxy">
    <property name="target">
      <bean class="com.inov8.microbank.server.service.tickermodule.TickerManagerImpl">
        
        <property name="tickerListViewDAO">
          <ref local="tickerListViewDAO"/>
        </property>
        
          <property name="tickerDAO" ref="tickerDAO">
          
        </property>
      </bean>
    </property>
    </bean>
    
     <bean id="tickerFacade" class="com.inov8.microbank.server.facade.TickerFacadeImpl">
    <property name="frameworkExceptionTranslator">
      <ref bean="frameworkExceptionTranslator"/>
    </property>
    <property name="tickerManager">
      <ref local="tickerManager"/>
    </property>
    
  </bean>
  
  </beans>