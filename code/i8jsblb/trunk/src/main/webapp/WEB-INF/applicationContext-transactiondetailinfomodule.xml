<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	     xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	     xmlns:tx="http://www.springframework.org/schema/tx"
	     xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
           http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.0.xsd
           http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.0.xsd">


<!-- DAO -->
<bean id="transactionDetInfoListViewDAO" class="com.inov8.microbank.server.dao.transactiondetailinfomodule.hibernate.TransactionDetInfoListViewHibernateDAO">
    <property name="sessionFactory" ref="sessionFactory"/>
  </bean>
  
  <bean id="transactionDAO" class="com.inov8.microbank.server.dao.transactionmodule.hibernate.TransactionHibernateDAO">
       <property name="sessionFactory" ref="sessionFactory"/>
       </bean>
       
       <bean id="allPayTransactionInfoListViewDAO" class="com.inov8.microbank.server.dao.transactiondetailinfomodule.hibernate.AllPayTransactionInfoListViewHibernateDAO">
       	<property name="sessionFactory" ref="sessionFactory"/>
       </bean>
       
       <bean id="miniStatementListViewDAO" class="com.inov8.microbank.server.dao.transactiondetailinfomodule.hibernate.MiniStatementListViewHibernateDAO">
       	<property name="sessionFactory" ref="sessionFactory"/>
       </bean>
       
        <bean id="transactionCodeDAO" class="com.inov8.microbank.server.dao.transactionmodule.hibernate.TransactionCodeHibernateDAO">
    <property name="sessionFactory" ref="sessionFactory"/>
  </bean>

<bean id="commissionTransactionDAO" class="com.inov8.microbank.server.dao.commissionmodule.hibernate.CommissionTransactionHibernateDAO">
    <property name="sessionFactory" ref="sessionFactory"/>
  </bean>
  
  
  <bean id="transactionDetailDAO" class="com.inov8.microbank.server.dao.transactionmodule.hibernate.TransactionDetailHibernateDAO">
    <property name="sessionFactory" ref="sessionFactory"/>
  </bean>
  
  
  
    <bean id="transactionDetInfoListViewManager" parent="baseTransactionProxy">
    <property name="target">
      <bean class="com.inov8.microbank.server.service.transactiondetailinfomodule.TransactionDetInfoListViewManagerImpl">
		<property name="allPayTransactionInfoListViewDAO">
          <ref bean="allPayTransactionInfoListViewDAO"/>
        </property>
        
        <property name="transactionDetInfoListViewDAO">
          <ref local="transactionDetInfoListViewDAO"/>
        </property>
  
		  <property name="transactionCodeDAO">
          <ref local="transactionCodeDAO"/>
        </property>
        
        <property name="transactionDAO">
          <ref local="transactionDAO"/>
        </property>
        
          <property name="transactionDetailDAO">
          <ref local="transactionDetailDAO"/>
        </property>
        <property name="auditLogDAO" ref="auditLogDAO"/>	
         <property name="commissionTransactionDAO">
          <ref local="commissionTransactionDAO"/>
        </property>
        
      </bean>
    </property>

  </bean>

  
  
  
    <bean id="transactionDetailInfoFacade" class="com.inov8.microbank.server.facade.TransactionDetailInfoFacadeImpl">
    <property name="frameworkExceptionTranslator">
      <ref bean="frameworkExceptionTranslator"/>
    </property>
    <property name="transactionDetInfoListViewManager">
      <ref local="transactionDetInfoListViewManager"/>
    </property>

  </bean>

</beans>
  