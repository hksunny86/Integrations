<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
           http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.0.xsd
           http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.0.xsd">


    <bean id="zongBalanceUpdateDAO"
          class="com.inov8.microbank.server.service.advancesalaryloan.dao.hibernate.ZongBalanceUpdateHibernateDAO">
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>


    <bean id="zongBalanceUpdateManager" parent="baseTransactionProxy">
        <property name="target">
            <bean class="com.inov8.microbank.server.service.zongbalanceupdatemodule.ZongBalanceUpdateManagerImpl">
                <property name="zongBalanceUpdateDAO" ref="zongBalanceUpdateDAO"/>
                <property name="genericDao">
                    <ref bean="genericHibernateDAO"/>
                </property>

            </bean>
        </property>


    </bean>

</beans>